{
  // 指定枪械弹药
  "ammo": "ocle:oc_ammo",
  // 弹容
  "ammo_amount": 800,
  // 扩容弹夹弹药总数
  "extended_mag_ammo_amount": [
    35,
    38,
    40
  ],
  // 枪栓类型：开膛待机（open_bolt）、闭膛待击（closed_bolt）、手动上膛（manual_action)
  "bolt": "open_bolt",
  // 每分钟射出弹药量，最大不应超过 1200
  "rpm": 120,
  // 子弹实体属性
  "bullet": {
    // 寿命，单位秒
    "life": 0.8,
    // 用于霰弹，默认为 1，每发的伤害 / bullet_amount，每次射击扣除一发子弹
    "bullet_amount": 50,
    // 伤害
    "damage": 50,
    // 曳光弹间隔数量，没有此字段则不发射曳光弹
    // 设置为 0 则是每发都是曳光弹
    // 额外伤害的内容，为空则表示没有任何额外伤害计算内容
    "extra_damage": {
      // 护甲穿透率，默认为 0，也就是没有穿甲伤害
      "armor_ignore": 3.0,
      // 爆头伤害 x1.5
      "head_shot_multiplier": 3.0,
      // 距离-伤害分段常函数
      "damage_adjust": [
        // 这样就能写抵近伤害了
        {"distance": 100000, "damage": 50},
        {"distance": 200000, "damage": 50},
        {"distance": 300000, "damage": 50},
        {"distance": 400000, "damage": 50},
        {"distance": 500000, "damage": 50},
        // 如果你忘记写这个无穷，那么超过上述距离，我就认为是 0
        {"distance": "infinite", "damage": 50}
      ]
    },
    // 速度 m/s
    "speed": 1000,
    // 重力
    "gravity": 0.0,
    // 击退效果
    "knockback": 0,
    // 阻力
    "friction": 0.0,
    // 点燃目标
    "ignite": false,
    // 点燃时间，默认为 2 秒，仅用于实体
    "ignite_entity_time": 2,
    // 穿透数
    "pierce": 50,
    // 是否爆炸，没有此字段时为 false
    "explosion": {
    //"explosion": {
     "explode": true,
    //  "radius": 5,
     "radius": 4,
    //  "damage": 5,
     "damage": 50,
    //  爆炸导致的破坏方块，默认为 false，需要服务器也开启爆炸破坏方块才能使用
     "destroy_block": true,
    //  "knockback": false
     "knockback": false,
     "delay": 2
    //}
    }
  },
  // 换弹相关
  "reload": {
    // magazine 是弹匣供弹，manual 是手动供弹
    "type": "fuel",
    // 弹匣供弹换弹时长（秒），到达此时间点，服务端就更新枪内子弹数量
    "feed": {
      // 空仓换弹
      "empty": 2.8,
      // 战术换弹
      "tactical": 2.8
    },
    // 弹匣供弹总时长（秒），到达此时间点，枪械才可以进行开火、检视等行为。
    "cooldown": {
      // 空仓换弹
      "empty": 3.0,
      // 战术换弹
      "tactical": 3.0
    }
  },
  // 枪械抬起的动作时长，单位秒。
  // 抬起动作完成后，枪械可以进行开火、检视等行为
  "draw_time": 0.75,
  // 收枪的动作时长，单位秒。
  "put_away_time": 0.5,
  // 瞄准时长，单位秒。
  "aim_time": 0.5,
  "sprint_time": 0.5,
  // 拉栓上膛的时间，仅当枪栓类型为 manual_action 时有效
  // "bolt_action_time": 0.9,
  // 开火模式
  "fire_mode": [
    // 全自动
    "auto",
    // 半自动
    "semi"
  ],
  // 多连续发数据，仅多连发会调用
  "burst_data": {
    // 是否连续射击
    "continuous_shoot": true,
    // 连发数
    "count": 3,
    // 组内连发的射速
    "bpm": 900,
    // 每组连发之间的时间间隔（上一组结束时间到下一组开始的时间间隔），单位秒
    "min_interval": 0.3
  },
  // 后坐力
  "recoil": {
    "pitch": [
      {"time": 0., "value": [0.0, 0.0]},
      {"time": 0.25, "value": [0.0, 0.0]},
      {"time": 0.45, "value": [0.0, -0.0]},
      {"time": 0.6, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [0.0, 0.0]},
      {"time": 0.25, "value": [0.0, 0.0]},
      {"time": 0.45, "value": [0, 0]}
    ]
  },
  // 受伤晃动幅度修改，乘数，1 为原版晃动程度，0 为完全不晃动，默认为 0.05
  "hurt_bob_tweak_multiplier": 0.05,
  // 不准确度
  "inaccuracy": {
    // 站立射击散布
    "stand": 0,
    // 移动射击散布
    "move": 0,
    // 潜行射击散布
    "sneak": 0,
    // 趴下射击散布
    "lie": 0,
    // 瞄准射击时散布
    "aim": 0
  },
  // 开放的配件槽。未指定的槽位默认关闭。全部配件槽类型有:
  // scope, stock, muzzle, grip, laser, extended_mag
  "allow_attachment_types": [
    "",
    "",
    "",
    "",
    "",
    ""
  ],
  // 专属的配件属性
  "exclusive_attachments": {
    // 配件 ID，后面的数据和配件的 data 部分结构完全一致
    "tacz:scope_standard_8x": {
      "weight": 2.0,
      "ads_addend": 0.04,
      "inaccuracy_addend": -0.4,
      "recoil_modifier": {
        "pitch": -0.2,
        "yaw": -0.1
      }
    }
  }
}