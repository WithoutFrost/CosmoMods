{
  // 指定枪械弹药
  "ammo": "zeta:gr8_ammo",
  // 弹容
  "ammo_amount": 1,
  // 扩容弹夹弹药总数
  "extended_mag_ammo_amount": [
    1,
    1,
    1
  ],
  // 枪栓类型：开膛待机（open_bolt）、闭膛待击（closed_bolt）、手动上膛（manual_action)
  "bolt": "open_bolt",
  // 每分钟射出弹药量，最大不应超过 1200
  "rpm": 150,
  // 子弹实体属性
  "bullet": {
    // 寿命，单位秒
    "life": 5,
    // 用于霰弹，默认为 1，每发的伤害 / bullet_amount，每次射击扣除一发子弹
    "bullet_amount": 1,
    // 伤害
    "damage": 500,
    // 曳光弹间隔数量，没有此字段则不发射曳光弹
    // 设置为 0 则是每发都是曳光弹
    // 额外伤害的内容，为空则表示没有任何额外伤害计算内容
    "extra_damage": {
      // 护甲穿透率，默认为 0，也就是没有穿甲伤害
      "armor_ignore": 1,
      // 爆头伤害 x1.5
      "head_shot_multiplier": 1.25,
      // 距离-伤害分段常函数
      "damage_adjust": [
        // 这样就能写抵近伤害了
        {"distance": 50, "damage": 500},
        {"distance": 100, "damage": 450},
        {"distance": 150, "damage": 400},
        // 如果你忘记写这个无穷，那么超过上述距离，我就认为是 0
        {"distance": "infinite", "damage": 400}
      ]
    },
    // 速度 m/s
    "speed": 230,
    // 重力
    "gravity": 0.042,
    // 击退效果
    "knockback": 2,
    // 阻力
    "friction": 0.08,
    // 点燃目标
    "ignite": false,
    // 点燃时间，默认为 2 秒，仅用于实体
    "ignite_entity_time": 2,
    // 穿透数
    "pierce": 1,
    // 是否爆炸，没有此字段时为 false
    "explosion": {
      "explode": true,
      "radius": 3,
      "damage": 24,
      "delay": 30,
    //  爆炸导致的击退，默认为 false，需要服务器也开启爆炸击退才能使用
      "knockback": false,
      "destroy_block": false
    }
  },
  "weight": 25.0,
  "movement_speed": {
    "base": -0.0,
    "aim": -0.2,
    "reload": -1.0
  },
  // 换弹相关
  "reload": {
    // magazine 是弹匣供弹，manual 是手动供弹
    "type": "magazine",
    // 弹匣供弹换弹时长（秒），到达此时间点，服务端就更新枪内子弹数量
    "feed": {
      // 空仓换弹
      "empty": 3.88,
      // 战术换弹
      "tactical": 0.001
    },
    // 弹匣供弹总时长（秒），到达此时间点，枪械才可以进行开火、检视等行为。
    "cooldown": {
      // 空仓换弹
      "empty": 5.6,
      // 战术换弹
      "tactical": 0.001
    }
  },
  // 枪械抬起的动作时长，单位秒。
  // 抬起动作完成后，枪械可以进行开火、检视等行为
  "draw_time": 1.3667,
  // 收枪的动作时长，单位秒。
  "put_away_time": 0.8167,
  // 瞄准时长，单位秒。
  "aim_time": 0.3,
  "sprint_time": 1,
  // 拉栓上膛的时间，仅当枪栓类型为 manual_action 时有效
  // "bolt_action_time": 0.9,
  // 开火模式
  "fire_mode": [
    // 全自动
    // 半自动
    "semi"
  ],
 
 
  // 后坐力
  "recoil": {
    "pitch": [
      {"time": 0, "value": [3.5, 3.5]},
      {"time": 0.32, "value": [3.5, 3.5]},
      {"time": 0.57, "value": [-0.35, -0.35]},
      {"time": 0.82, "value": [0.15, 0.15]},
      {"time": 1.17, "value": [0, 0]},
      {"time": 1.47, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [-0.7, -0.6]},
      {"time": 0.32, "value": [-0.7, -0.6]},
      {"time": 0.57, "value": [0, 0]}
    ]
  },
  // 受伤晃动幅度修改，乘数，1 为原版晃动程度，0 为完全不晃动，默认为 0.05
  "hurt_bob_tweak_multiplier": 0.05,
  // 不准确度
  "inaccuracy": {
    // 站立射击散布
    "stand": 2,
    // 移动射击散布
    "move": 2.5,
    // 潜行射击散布
    "sneak": 1,
    // 趴下射击散布
    "lie": 0.5,
    // 瞄准射击时散布
    "aim": 0.075
  },
  // 开放的配件槽。未指定的槽位默认关闭。全部配件槽类型有:
  // scope, stock, muzzle, grip, laser, extended_mag
  "allow_attachment_types": [
    "scope",
    "extended_mag"
  ],
  "exclusive_attachments": {
  }
}