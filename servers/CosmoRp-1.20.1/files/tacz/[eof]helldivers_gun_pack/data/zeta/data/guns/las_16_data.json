{
  "ammo": "zeta:las_16_ammo",
  "ammo_amount": 100,
 
  "bolt": "open_bolt",
  "rpm": 750,
  "bullet": {
    "life": 0.75,
    "bullet_amount": 1,
    "damage": 9,
    "tracer_count_interval": 0,
    "extra_damage": {
      "armor_ignore": 0.2,
      "head_shot_multiplier": 1.5,
      "damage_adjust": [
        {"distance": 20, "damage": 9},
        {"distance": 50, "damage": 7},
        {"distance": "infinite", "damage": 5}
      ]
    },
    "speed": 300,
    "gravity": 0,
    "knockback": 0,
    "friction": 0.015,
    "ignite": false,
    "pierce": 1
  },


"heat":  {
  
    "max": 240,
    // 每次射击（每发子弹）增加的过热计数器值
    "per_shot": 4,
   
    // 停止射击（且超出连射间隔）后开始冷却需要等待的延迟时间，单位秒
    "cooling_delay": 1,
    // 过热惩罚时间，单位秒，过热时射击会额外增加此时间作为冷却延迟
    "over_heat_time": 1
  },




  "reload": {
    "type": "fuel",
    "infinite": false,
    "feed": {
      "empty": 2.2,
      "tactical": 2.8
    },
    "cooldown": {
      "empty": 2.92,
      "tactical": 3.63
    }
  },
  "draw_time": 0.3,
  "put_away_time": 0.43,
  "aim_time": 0.17,
  "sprint_time": 0.18,
  "weight": 2.0,
  "fire_mode": [
    "auto"
  ],
  "recoil": {
    "pitch": [
      {"time": 0, "value": [0.15, 0.15]},
      {"time": 0.3, "value": [0.15, 0.15]},
      {"time": 0.5, "value": [-0.125, -0.125]},
      {"time": 0.65, "value": [0, 0]}
    ],
    "yaw": [
      {"time": 0, "value": [-0.15, 0.15]},
      {"time": 0.3, "value": [-0.15, 0.15]},
      {"time": 0.5, "value": [0, 0]}
    ]
  },
  "inaccuracy": {
    "stand": 0.9,
    "move": 1,
    "sneak": 0.5,
    "lie": 0.1,
    "aim": 0.125
  },
  // 近战相关
  "melee": {
    // 枪械距离参数，用来延升近战攻击范围
    // 会与刺刀等配件的距离做加和
    "distance": 1,
    // 使用时的冷却时间
    "cooldown": 0.6,
    // 默认近战数据，会被配件的数据替换掉
    "default": {
      // 动画类型：没有枪托的为 melee_push，有枪托的为 melee_stock
      "animation_type": "melee_stock",
      // 刺刀距离参数，枪械里还有个刺刀攻击距离参数，两者做加和
      "distance": 1,
      // 刺刀范围角度
      "range_angle": 30,
      // 伤害值
      "damage": 5,
      // 击退效果
      "knockback": 0.5,
      // 前摇时长，单位：秒
      "prep": 0.1
    }
  },
 
  "script": "zeta:sp_heat",
  "script_param":{
    "reload_empty":2.92,
    "reload_feed":2.8,
    "reload_tac":3.63
  },
  "builtin_attachments": {
    "scope": "zeta:scythe_aim"
  },
  "allow_attachment_types": [
    "scope"
  ]
 

}